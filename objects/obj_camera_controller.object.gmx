view_hview[0]=base_height/zoom;

//Step 3: Update position of view based on ratio and mouse position.
view_xview[0]=mouse_x-view_wview[0]*_mouse_x;
view_yview[0]=mouse_y-view_hview[0]*_mouse_y;

if (!following){
    //Moving
    if (mouse_check_button_pressed(mb_left)){
        startx=mouse_x;
        starty=mouse_y;
    }
    
    if (mouse_check_button(mb_left)){
        view_xview[0]-=mouse_x-startx;
        view_yview[0]-=mouse_y-starty;
    }
}else{
    //Following creature
    if (mouse_check_button_pressed(mb_left)){
        following=false;
        startx=mouse_x;
        starty=mouse_y;
    }
    view_xview[0]=follow_id.x-view_wview[0]/2;
    view_yview[0]=follow_id.y-view_hview[0]/2
}



